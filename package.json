    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.14.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.14",
    "ts-prune": "^0.10.3",
    "typescript": "^5",
    "velite": "0.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
